[user]
  name = Roman Kuznetsov
  email = kuznero@gmail.com
[core]
  excludesfile = ~/.gitignore
  editor = vim
  autocrlf = input
[alias]
  st = status
  ci = commit
  co = checkout
  l = log --graph --oneline --decorate --all -n 20
  br = branch
  d = diff
  dt = difftool --diff-filter=ACMRTUXB --prompt
  m = merge
  mt = mergetool
  cl = clean -x -d -f
[color]
  ui = true
[diff]
  tool = bc3
[difftool]
  prompt = false
[difftool "bc3"]
  path = c:/program files/beyond compare 4/bcomp.exe
[merge]
  tool = bc3
[mergetool]
  prompt = false
[mergetool "bc3"]
  path = c:/program files/beyond compare 4/bcomp.exe
[push]
  default = simple
