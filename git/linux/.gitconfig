[user]
  name = Roman Kuznetsov
  email = kuznero@gmail.com
[core]
  excludesfile = ~/.gitignore
  # editor = subl -n -w
  editor = vim
[alias]
  st = status
  ci = commit
  co = checkout
  la = log --pretty=oneline --graph --abbrev-commit
  l = log --pretty=oneline --graph --abbrev-commit --first-parent
  br = branch
  d = diff
  dt = difftool --diff-filter=ACMRTUXB --prompt
  m = merge
  mt = mergetool
  cl = clean -x -d -f
[color]
  ui = true
[diff]
  tool = bc3
[difftool]
  prompt = false
[merge]
  tool = bc3
[mergetool]
  prompt = false
