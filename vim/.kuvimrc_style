" GUI font {{{1
" make sure to install patched powerline fonts from [github.com/powerline/fonts]
if has('win32')
  set guifont=DejaVu_Sans_Mono_for_Powerline:h10:cRUSSIAN
elseif has('unix')
  set guifont=DejaVu\ Sans\ Mono\ for\ Powerline\ 11
endif

" Color scheme {{{1
syntax enable

if has( "gui_running" )
  " " kuznero theme
  " colorscheme kuznero-dark-regular

  " " solarized theme
  " let g:solarized_termcolors=256
  " colorscheme solarized

  " molokai theme
  " let g:molokai_original=1
  colorscheme molokai
endif

if has( "gui_running" )
  " " light mode
  " set background=light
  " dark mode
  set background=dark
else
  set background=dark
endif
