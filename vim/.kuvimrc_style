" GUI font {{{1
if has('win32')
  set guifont=Droid_Sans_Mono_Dotted_for_Powe:h11:cRUSSIAN
elseif has('unix')
  set guifont=Source\ Code\ Pro\ for\ Powerline\ Light\ 11
endif

" Color scheme {{{1
syntax enable

if has( "gui_running" )
  " " kuznero light theme
  " set background=light
  " colorscheme kuznero-light-regular

  " kuznero dark theme
  set background=dark
  colorscheme kuznero-dark-regular

  " " base16
  " set background=dark
  " let base15colorspace=256
  " colorscheme base16-default-dark
else
  set background=dark
  colorscheme default
endif

" Configure airline
let g:airline#extensions#tabline#enabled=1
let g:airline#extensions#tabline#left_sep = ' '
let g:airline#extensions#tabline#left_alt_sep = '|'
" make sure to install patched powerline fonts from [github.com/kuznero/fonts]
let g:airline_powerline_fonts=1
if has( "gui_running" )
  let g:airline_powerline_fonts = 1
  " let g:airline_theme='powerlineish'
  " let g:airline_theme='base16'
  let g:airline_theme='molokai'
  " let g:airline_theme='light'
  " let g:airline_theme='dark'
else
  let g:airline_theme='molokai'
endif
