" Common {{{1
" remap leader
" let mapleader = "`"
" save current file
" :nnoremap <F2> :w<CR>
if has('win32')
  " toggle full screen
  map <F11> <Esc>:call libcallnr("gvimfullscreen.dll", "ToggleFullScreen", 0)<CR>
endif
" search in files
:nnoremap <F3> :call SearchInFiles()<CR>
:nnoremap <S-F3> :lclose<CR>
" clearing highlighted search
:nnoremap <leader><leader> :nohlsearch<CR>
" set scrolloff to toggle always placing cursor in the middle
:nnoremap <leader>zz :let &scrolloff=999-&scrolloff<CR>

" Auto detect current file encoding
:nnoremap <leader>f :FencAutoDetect<CR>

" Diff Current File {{{1
:nnoremap <leader>dt :diffthis<CR>
:nnoremap <leader>du :diffupdate<CR>
:nnoremap <leader>do :diffoff<CR>

" Three-Way Merge {{{1
:nnoremap <leader>mr :diffget RE<CR>
:nnoremap <leader>mb :diffget BA<CR>
:nnoremap <leader>ml :diffget LO<CR>

" NERDTree {{{1
function! NTToggle()
  if exists("t:NERDTreeBufName")
    let s:ntree = bufwinnr(t:NERDTreeBufName)
  else
    let s:ntree = -1
  endif
  if (s:ntree != -1)
    :NERDTreeClose
  else
    ":NERDTreeFind
    :NERDTree %:p:h
  endif
endfunction
:nmap <silent> <C-D> :call NTToggle()<CR>
