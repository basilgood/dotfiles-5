" Common {{{1
" remap leader
" let mapleader = "`"
" save current file
:nnoremap <F2> :w<CR>
" clearing highlighted search
:nnoremap <leader><leader> :nohlsearch<CR>
" set scrolloff to toggle always placing cursor in the middle
:nnoremap <leader>zz :let &scrolloff=999-&scrolloff<CR>

" Buffer management {{{1
:nnoremap <C-h> :bp<CR>
:nnoremap <C-l> :bn<CR>
:nnoremap <C-j> :bd<CR>
:nnoremap <C-k> :tabnew<CR>

" Auto-detect encoding {{{1
:nnoremap <leader>x :FencAutoDetect<CR>

" NERDTree {{{1
function! NTToggle()
  if exists("t:NERDTreeBufName")
    let s:ntree = bufwinnr(t:NERDTreeBufName)
  else
    let s:ntree = -1
  endif
  if (s:ntree != -1)
    :NERDTreeClose
  else
    ":NERDTreeFind
    :NERDTree %:p:h
  endif
endfunction
:nmap <silent> <C-D> :call NTToggle()<CR>
